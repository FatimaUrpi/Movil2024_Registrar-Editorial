<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    tools:context=".vista.consulta.EditorialConsultaDetalleActivity"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/DetalleIDEditorial"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/DetalleRazonSocialEditorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/DetalleDireccionEditorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/DetalleRucEditorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/DetallePais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/DetalleCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>