<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.registra.EditorialRegistraActivity"
    android:orientation="vertical"
    android:padding="10dp"
    >

<ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro Editorial : Cristian Aquice"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Razón Social"
        android:textSize="15dp"
        android:layout_margin="4dp"
        />
    <EditText
        android:id="@+id/txtRazonSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Razón Social"
        android:textSize="15dp"
        android:layout_margin="4dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Dirección"
        android:textSize="15dp"
        android:layout_margin="4dp"
        />
    <EditText
        android:id="@+id/txtDireccionEditorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Dirección"
        android:layout_margin="4dp"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" RUC"
        android:layout_margin="4dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/txtRucEditorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_margin="4dp"
        android:hint="11 Dígitos"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Fecha Creación"
        android:layout_margin="4dp"
        android:textSize="15dp"
        />
    <EditText
        android:id="@+id/txtFechaCreacionEditorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:layout_margin="4dp"
        android:hint="Seleccionar Fecha"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" País"
        android:layout_margin="4dp"
        android:textSize="15dp"
        />
    <Spinner
        android:id="@+id/spnPaisEditorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textSize="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Categoría"
        android:layout_margin="4dp"
        android:textSize="15dp"
        />
    <Spinner
        android:id="@+id/spnCategoriaEditorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textSize="10dp"
        />

    <Button
        android:id="@+id/btnRegistrarEditorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Registrar"
        android:textSize="15dp" />

</androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>